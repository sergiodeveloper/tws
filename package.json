{
  "version": "2.0.0",
  "name": "@tws-js/server",
  "description": "Type-Safe Web Server Framework",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/sergiodeveloper/tws",
  "scripts": {
    "test": "npm run unit-test && npm run integration-test",
    "unit-test": "NODE_OPTIONS=--enable-source-maps bun test test/unit",
    "integration-test": "NODE_OPTIONS=--enable-source-maps bun test test/integration",
    "lint": "npm run twly && npm run eslint && npx tsc --noEmit",
    "format": "eslint src test --fix",
    "build": "rm -rf dist && tsc",
    "twly": "npx twly -t .trc && npx twly -t test/.trc",
    "eslint": "npx eslint src test",
    "preview-ws": "nodemon --exec concurrently \"bun test/preview/test-ws-client.ts\" \"bun test/preview/test-server.ts\"",
    "deploy": "npm run lint && npm test && npm run build && npm publish --access=public"
  },
  "dependencies": {
    "@tws-js/common": "^1.0.0",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "concurrently": "^9.0.1",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.18.0",
    "isomorphic-ws": "^5.0.0",
    "nodemon": "^3.1.9",
    "twly": "^4.0.4",
    "typescript": "^5.7.2",
    "ws": "^8.18.0"
  },
  "nodemonConfig": {
    "ext": "ts,js,json"
  }
}
